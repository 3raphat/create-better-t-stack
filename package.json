{
	"name": "better-t-stack",
	"private": true,
	"scripts": {
		"build": "turbo build",
		"dev": "turbo dev",
		"build:web": "turbo run build --filter=web",
		"build:web:cloudflare": "bun install && bun run build:web",
		"build:cli": "turbo run build --filter=cli",
		"check": "turbo check",
		"prepare": "husky",
		"publish-packages": "turbo run build && changeset publish"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"@changesets/cli": "^2.28.1",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.0",
		"turbo": "^2.4.4",
		"typescript": "5.7.3"
	},
	"lint-staged": {
		"*": ["biome check --write ."]
	},
	"engines": {
		"node": ">=20"
	},
	"packageManager": "bun@1.2.2",
	"workspaces": ["apps/*"]
}
